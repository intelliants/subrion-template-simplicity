<?xml version="1.0" encoding="utf-8"?>
<module type="template" name="simplicity">
    <title>Simplicity</title>
    <summary>Bootstrap 4 developer template</summary>
    <author>Artem Malichev</author>
    <contributor>Intelliants LLC</contributor>
    <version>1.0.0</version>
    <date>2019-04-30</date>
    <compatibility>4.2</compatibility>

    <layout>
        <position menu="1" movable="0">account</position>
        <position menu="1" movable="0">mainmenu</position>

        <position>inventory</position>
        <position>teaser</position>
        <position>verytop</position>
        <position>top</position>
        <position>bottom</position>
        <position>verybottom</position>
        <position>copyright</position>
        <position>landing</position>

        <section name="content">
            <position fixed="1">left</position>
            <position width="6">center</position>
            <position fixed="1">right</position>
        </section>
        <section name="footer-blocks">
            <position width="3">footer1</position>
            <position width="3">footer2</position>
            <position width="3">footer3</position>
            <position width="3">footer4</position>
        </section>
    </layout>

    <configgroup name="template_simplicity">Template</configgroup>

    <config group="template_simplicity"
            type="divider"
            order="3000">General</config>
    <config group="template_simplicity"
            name="enable_landing"
            type="radio"
            order="3001"
            values="1,0"
            description="Enable landing page">1</config>

    <config group="template_simplicity"
            type="divider"
            order="3200">Navbar / Mainmenu</config>
    <config group="template_simplicity"
            name="max_top_menu_items"
            type="text"
            description="Max number of items in Main Menu"
            order="3201">6</config>
    <config group="template_simplicity"
            name="enable_text_logo"
            type="radio"
            order="3202"
            values="1,0"
            description="Enable Logo text">0</config>
    <config group="template_simplicity"
            name="logo_text"
            type="text"
            order="3203"
            show="enable_text_logo|1"
            description="Logo text">Simplicity</config>
    <config group="template_simplicity"
            name="navbar_sticky"
            type="radio"
            order="3204"
            values="1,0"
            description="Sticky navbar">1</config>

    <config group="template_simplicity"
            type="divider"
            order="4000">Social links</config>
    <config group="template_simplicity"
            name="website_social"
            type="radio"
            order="4001"
            values="1,0"
            description="Show links">1</config>
    <config group="template_simplicity"
            name="website_social_t"
            type="text"
            order="4002"
            show="website_social|1"
            description="Twitter Link">#</config>
    <config group="template_simplicity"
            name="website_social_f"
            type="text"
            order="4003"
            show="website_social|1"
            description="Facebook Link">#</config>
    <config group="template_simplicity"
            name="website_social_g"
            type="text"
            order="4004"
            show="website_social|1"
            description="Google+ Link">#</config>
    <config group="template_simplicity"
            name="website_social_i"
            type="text"
            order="4005"
            show="website_social|1"
            description="LinkedIn Link">#</config>

    <config group="template_simplicity"
            name="ckeditor_css"
            type="hidden"
            private="0"
            description="CKEditor CSS"
            order="5000">ckeditor.css</config>

    <changeset>
        <menu position="account" status="active">account</menu>

        <block status="active" classname="section section-portfolio" position="landing" order="203">new_portfolio_entries</block>
        <block status="active" classname="section section-testimonials" position="landing" order="204">testimonials</block>
        <block status="active" classname="section section-blog" position="landing" order="205">blogroll</block>
        <block status="active" classname="box--border" position="right">common_statistics</block>
        <block status="active" classname="box--border" position="left">filters</block>
    </changeset>

    <blocks>
        <block name="header"
               title="Teaser block"
               position="teaser"
               header="0"
               collapsible="0"
               sticky="0"
               pages="index"
               status="active"
               type="html">
            <![CDATA[
<div class="teaser">
    <div class="container">
        <h1>The greatest place<br>to kickstart anything</h1>
        <h2>You will love how easy<br>it is to manage your content</h2>
    </div>
</div>
            ]]>
        </block>
        <block name="landing_what_is_this"
               title="What this all about?"
               position="landing"
               header="1"
               collapsible="0"
               sticky="0"
               pages="index"
               status="active"
               type="smarty"
               classname="section section-what"
               order="200">
            <![CDATA[
<div class="row text-center m-t-md">
    <div class="col-md-4">
        <img src="{$img}browser.png" width="64" alt=""/>
        <h4 class="m-t">Landing page</h4>
        <p class="text-fade-75">This is a starting page for your website. You can change it (switch off) to display content and blocks. This can be done on Template configuration page.</p>
    </div>
    <div class="col-md-4">
        <img src="{$img}computer.png" width="64" alt=""/>
        <h4 class="m-t">Configuration options</h4>
        <p class="text-fade-75"><b>Simplicity</b> template has many configuration options to play with. Go to admin panel and try to change, for example, background of header block.</p>
    </div>
    <div class="col-md-4">
        <img src="{$img}computer2.png" width="64" alt=""/>
        <h4 class="m-t">Blocks management</h4>
        <p class="text-fade-75">Each section on this page can be changed in Admin Dashboard in Blocks section, as well as all other blocks on all pages. Go give it a try!</p>
    </div>
</div>
<div class="text-center m-t-lg">
    <a class="btn btn-primary text-uppercase" href="{$smarty.const.IA_ADMIN_URL}">Go to admin dashboard</a>
</div>
            ]]>
        </block>
        <block name="landing_features"
               title="Features"
               position="landing"
               header="1"
               collapsible="0"
               sticky="0"
               pages="index"
               status="active"
               type="html"
               classname="section section-features"
               order="201">
            <![CDATA[
<div class="row">
    <div class="col-sm-6">
        <div class="b-feature b-feature--right">
            <div class="b-feature__img">
                <span class="fa fa-hand-peace-o"></span>
            </div>
            <div class="b-feature__body">
                <h3>Free & open source</h3>
                <p class="text-fade-75">You don't need to pay a single penny to start using Subrion CMS. It's not encrypted in any way so you can customize it per your needs.</p>
            </div>
        </div>
    </div>
    <div class="col-sm-6">
        <div class="b-feature">
            <div class="b-feature__img">
                <span class="fa fa-rocket"></span>
            </div>
            <div class="b-feature__body">
                <h3>Extremely easy to extend</h3>
                <p class="text-fade-75">Forget the hours of programming simple things. Use Subrion framework API to add extra stuff using hooks, plugins, & packages.</p>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-sm-6">
        <div class="b-feature b-feature--right">
            <div class="b-feature__img">
                <span class="fa fa-cloud-download"></span>
            </div>
            <div class="b-feature__body">
                <h3>Templates and plugins</h3>
                <p class="text-fade-75">No need to search. Plugins and templates are available straight from your admin dashboard with one click installation process.</p>
            </div>
        </div>
    </div>
    <div class="col-sm-6">
        <div class="b-feature">
            <div class="b-feature__img">
                <span class="fa fa-cogs"></span>
            </div>
            <div class="b-feature__body">
                <h3>Powerful admin dashboard</h3>
                <p class="text-fade-75">It's done to focus on the content management process. Start it hassle-free within just a few minutes and take care of the content. It's easy!</p>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-sm-6">
        <div class="b-feature b-feature--right">
            <div class="b-feature__img">
                <span class="fa fa-edit"></span>
            </div>
            <div class="b-feature__body">
                <h3>Blog in the box</h3>
                <p class="text-fade-75">Bring your online presence to a whole new level with the extensive blog functionality that comes in the version by default.</p>
            </div>
        </div>
    </div>
    <div class="col-sm-6">
        <div class="b-feature">
            <div class="b-feature__img">
                <span class="fa fa-flag"></span>
            </div>
            <div class="b-feature__body">
                <h3>Multilingual CMS</h3>
                <p class="text-fade-75">Use ready translation or translate the system into your language. It provides all the functionality to become a multilingual solution.</p>
            </div>
        </div>
    </div>
</div>
            ]]>
        </block>
        <block name="landing_mobile"
               title="Ready for mobile devices"
               position="landing"
               header="0"
               collapsible="0"
               sticky="0"
               pages="index"
               status="active"
               type="smarty"
               classname="section section-mobile"
               order="202">
            <![CDATA[
<div class="row">
    <div class="col-md-6 col-md-offset-2">
        <div class="section-mobile__text">
            <h2>{$block.title}</h2>
